@model NewsPortal.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<div class="panel">
    <div class="panel-heading">
        <h2>@Resources.Resource.LoginToSystem</h2>
    </div>
    <div class="panel-body">
        <p class="lead">@Resources.Resource.PleaseLoginToAccessAdminPanel:</p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>@Resources.Resource.UserName:</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>@Resources.Resource.Password:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <input type="submit" value="@Resources.Resource.Submit" class="btn btn-primary" />
        }
    </div>
</div>