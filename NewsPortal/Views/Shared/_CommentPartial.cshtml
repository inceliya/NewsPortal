@using NewsPortal.CustomHtmlHelpers;
@model NewsPortal.ViewModels.CommentViewModel

    <div class="comment">
        @if (Url.Action().ToLower().Contains("admin"))
        {     
            @Html.ActionLink(Resources.Resource.Delete, "DeleteComment", "Comment", new { commentId = Model.Id, newsId = Model.NewsId },
               new { onclick = $"return confirm('{Resources.Resource.ConfirmDeleteComment}')", @class = "btn btn-danger pull-right" })
        }
        <p class="name">@Model.Author</p>
        <p class="text">@Model.Text</p>
        <p class="date">@Html.Date(Model.CreationDate)</p>
    </div>

