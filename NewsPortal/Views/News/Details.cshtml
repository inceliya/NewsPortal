@model NewsPortal.ViewModels.NewsViewModel
@using NewsPortal.CustomHtmlHelpers;
@{
    ViewBag.Title = "Details";
}
<div>
    <div class="d-flex flex-column">
        <div class="title">
            <h2>@Model.Title</h2>
        </div>
        <div class="text-right text-muted">
            <p id="date">@Html.Date(Model.PublicationDate)</p>
        </div>
        <div class="row @*d-flex*@">
            <img class="col-lg-12" src="@Model.Image" alt="@Resources.Resource.Image" />
        </div>
        <div class="description">
            @Html.Raw(Model.Description)
        </div>
    </div>
</div>
<hr />
<h3 class="text-center">@Resources.Resource.Comments</h3>
<div>
    @Html.Partial("_CommentForm", new NewsPortal.ViewModels.CommentViewModel())
    <div class="row success">
        @Html.Action("GetComments", "Comment", new { id = Model.Id })
    </div>
</div>
